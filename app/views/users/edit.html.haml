- provide(:title, "Edit user")
%h1 Update your profile
.row
  .col-md-6.col-md-offset-3
    = simple_form_for(@user) do |f|
      = render partial: '/shared/error_messages', locals: {object: f.object} 
      = f.label :name
      = f.text_field :name, class: 'form-control'
      = f.label :surname
      = f.text_field :surname, class: 'form-control'
      = f.input :sex, as: :select, collection: options_for_sex_select, input_html: { class: "form-control" }
      = f.input :date_of_birth, as: :date, html5: true
      = f.label :city
      = f.text_field :city, class: 'form-control'
      = f.label :phone_number
      = f.text_field :phone_number, class: 'form-control'
      = f.submit "Save changes", class: "btn btn-primary"